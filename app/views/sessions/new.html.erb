<div align="center" class="container-fluid">
  <h1>用户登录</h1>
  <div align="left" style="width:200px;">
  <%= form_tag :action => 'create' do %>
    <div class="form-group">
      <label for="email">Email address:</label>
      <input type="email" class="form-control" name="session[email]" id="session_email">
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" name="session[password]" id="session_password">
    </div>
    <div class="form-group form-check">
      <label class="form-check-label">
	<input class="form-check-input" type="checkbox" name="session[remember_me]" id="session_remember_me"> Remember me
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end -%>
  </div>
</div>
